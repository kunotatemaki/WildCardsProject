<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:layout_gravity="top">



    <RelativeLayout
        android:id="@+id/front_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rukiasoft.wildcardsproject.ui.ThreeTwoImageView
            android:id="@+id/user_image"
            android:contentDescription="@string/user_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@drawable/e_darling"
            android:layout_margin="@dimen/activity_margin"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary_text"
            android:textSize="22sp"
            tools:text="prueba de texto"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_below="@id/user_image" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/back_card"
        android:background="@color/cyan_500"
        android:alpha="0"
        android:visibility="invisible">

        <Button
            android:id="@+id/flip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
    </RelativeLayout>

    <TextView
        android:id="@+id/nope_tv"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_gravity="end"
        android:alpha="0"
        android:background="@drawable/shape_bg_red_rounded_rect"
        android:gravity="center"
        android:text="@string/discardText"
        android:textColor="@android:color/holo_red_light"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_alignParentEnd="true"  />

</android.support.v7.widget.CardView>
