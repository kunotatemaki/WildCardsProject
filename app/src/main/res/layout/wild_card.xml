<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    android:layout_gravity="top">



    <android.support.constraint.ConstraintLayout
        android:id="@+id/front_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pic_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/color_margin"
            android:background="@color/cyan_500"
            app:layout_constraintDimensionRatio="h,4:2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/user_image"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="@+id/pic_background"
            app:layout_constraintRight_toRightOf="@+id/pic_background"
            app:layout_constraintTop_toTopOf="@+id/pic_background"
            app:layout_constraintBottom_toBottomOf="@+id/pic_background"
            app:srcCompat="@drawable/e_darling"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginEnd="200dp"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary_text"
            android:layout_marginStart="@dimen/text_margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="Megan Fox es una zorra"
            android:layout_marginEnd="@dimen/text_margin"
            app:layout_constraintRight_toRightOf="@+id/pic_background"
            app:layout_constraintLeft_toRightOf="@+id/user_image"
            app:layout_constraintTop_toTopOf="@+id/user_image"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/user_city_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary_text"
            android:layout_marginStart="@dimen/text_margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="Villalpando"
            android:layout_marginEnd="@dimen/text_margin"
            app:layout_constraintLeft_toRightOf="@+id/user_image"
            app:layout_constraintBottom_toBottomOf="@+id/user_image"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toRightOf="@+id/pic_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_name_tv" />

        <ImageView
            android:id="@+id/about_background"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="0dp"
            android:background="@color/grey_700"
            app:layout_constraintLeft_toLeftOf="@+id/pic_background"
            app:layout_constraintTop_toBottomOf="@+id/pic_background"
            app:layout_constraintRight_toRightOf="@+id/pic_background" />

        <TextView
            android:id="@+id/about"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_alignParentStart="true"
            android:text="@string/about"
            android:textColor="#FFF"
            app:layout_constraintLeft_toLeftOf="@+id/about_background"
            app:layout_constraintRight_toRightOf="@id/about_background"
            app:layout_constraintTop_toTopOf="@id/about_background"
            app:layout_constraintBottom_toBottomOf="@id/about_background"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/nope_tv"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        android:alpha="0"
        android:background="@drawable/shape_bg_red_rounded_rect"
        android:gravity="center"
        android:text="@string/discardText"
        android:textColor="@android:color/holo_red_light"
        android:textSize="32sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/back_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/flip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="@dimen/activity_margin"
            android:src="@drawable/ic_arrow_back_black_36dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
